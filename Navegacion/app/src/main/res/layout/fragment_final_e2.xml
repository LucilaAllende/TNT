<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutfinale1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#880E4F"
    tools:context=".FinalFragmentE1">


    <TextView
        android:id="@+id/titulo_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_final_fragment"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/puntaje_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/puntaje_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_iniciar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_final" />

</androidx.constraintlayout.widget.ConstraintLayout>